{
    "compilerOptions": {
      "target": "ES2020",                  
      "module": "commonjs",               
      "outDir": "out",                    
      "rootDir": ".",                   
      "strict": true,                     
      "esModuleInterop": true,            
      "skipLibCheck": true,               
      "moduleResolution": "node",         
      "typeRoots": ["node_modules/@types"] 
    },
    "include": ["./client/**/*", "./server/**/*"],               
    "exclude": ["node_modules", "out"]    
}
